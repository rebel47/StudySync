{
  "rules": {
    "sessions": {
      "$sessionId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('host').val() == auth.uid || data.child('participants').child(auth.uid).exists())",
        "host": {
          ".write": "!data.exists() && auth != null"
        },
        "participants": {
          "$userId": {
            ".write": "$userId == auth.uid"
          }
        },
        "timer": {
          ".write": "auth != null && (root.child('sessions').child($sessionId).child('host').val() == auth.uid || root.child('sessions').child($sessionId).child('participants').child(auth.uid).exists())"
        },
        "messages": {
          ".read": "auth != null && root.child('sessions').child($sessionId).child('participants').child(auth.uid).exists()",
          "$messageId": {
            ".write": "auth != null && newData.child('userId').val() == auth.uid && root.child('sessions').child($sessionId).child('participants').child(auth.uid).exists()"
          }
        }
      }
    }
  }
}